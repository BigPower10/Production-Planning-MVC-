@*@model IEnumerable<Production_Planner.Models.MER_YARNINFO>*@

@model PagedList.IPagedList<Production_Planner.Models.MER_YARNINFO>
@using PagedList.Mvc;
@Html.Raw(TempData["msg"])

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<h2 style=" text-align:center; text-decoration: underline ;">Yarn Information</h2>

<style type="text/css">
    th {
        font-size: 15px;
        text-align: center;
      
    }

    td {
        font-size: 12px;
        
    }
</style>



<p>
    <a href="@Url.Action("Create", "Yarn")" class="btn btn-primary"> Add Yarn</a>
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            Yarn Description
        </th>
        <th>
            Unit Code
        </th>
        <th>
            Unit Name
        </th>
        <th colspan="3" style="text-align :center ">Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.YARNDESC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MER_UNIT.UNITCD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MER_UNIT.UNITNM)
            </td>
            <td style=" text-align: center;">
                @Html.ActionLink("Edit", "Edit", new { id = item.YARNCD }) |
                @Html.ActionLink("Details", "Details", new { id = item.YARNCD }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.YARNCD })
            </td>
        </tr>
    }

</table>
@if (Model.PageCount > 1)
{
    <p>Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount  </p>
    @Html.PagedListPager(Model, page => Url.Action("Index", "Yarn", new { page }))
}
