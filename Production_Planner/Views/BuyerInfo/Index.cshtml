@*@model IEnumerable<Production_Planner.Models.MER_COMPCODE>*@

@model PagedList.IPagedList<Production_Planner.Models.MER_COMPCODE>
@using PagedList.Mvc;
@Html.Raw(TempData["msg"])

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<h2 style=" text-align:center; text-decoration: underline ;">Corporation Information</h2>

<style type="text/css">
    th {
        font-size: 15px;
        text-align: center;
        
    }

    td {
        font-size: 12px;
    }
</style>

<p>
    <a href="@Url.Action("Create", "BuyerInfo")" class="btn btn-primary"> Add Buyer Info</a>
</p>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            Company Name
        </th>
        <th>
            Company Type
        </th>
        <th>
            Short Name
        </th>
        <th>
            Address
        </th>
        
        <th>
           Post Code
        </th>
        <th>
           Phone
        </th>
        <th>
           Fax
        </th>
        <th>
            Email
        </th>
       
        <th>
            Status
        </th>
        @*<th>
            Attention
        </th>
      
        <th>
           Reference
        </th>*@
        <th>
            Territory
        </th>
        
        <th>
           Country
        </th>
        
        <th colspan="3" style="text-align :center ">Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.COMPNM)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.COMPTYPE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SHORTNM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ADDRS1)
                @Html.DisplayFor(modelItem => item.ADDRS2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CMN_COUNTRY.CONNM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.POSTCODE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PHONE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FAX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMAIL)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.STATUS)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.ATTN)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.REF)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.TERRITORY)
            </td>
      
            
           
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.COMPCD }) |
                @Html.ActionLink("Details", "Details", new { id = item.COMPCD }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.COMPCD })
            </td>
        </tr>
    }

</table>

@if (Model.PageCount > 1)
{
    <p>Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount  </p>
    @Html.PagedListPager(Model, page => Url.Action("Index", "BuyerInfo", new { page }))
}
