@model PagedList.IPagedList<Production_Planner.Models.HRP_COMPUNIT>
@using PagedList.Mvc;
@Html.Raw(TempData["msg"])

@{
    ViewBag.Title = "Index";
   
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<h2 style=" text-align:center; text-decoration: underline ;">Factory Information</h2>

<style type="text/css">
    th {
       font-size:15px;
       text-align :center ;
       /*font-family:'Comic Sans MS' ;*/
    }
    td {
        
        font-size: 12px;
    }
</style>



<p>
    <a href="@Url.Action("Create", "FactoryInfo")" class="btn btn-primary"> Add Factory</a>
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th >
            Company Name
        </th>
        <th>
            Short Name
        </th>
        <th>
            Address
        </th>

        <th>
            Phone
        </th>
        <th>
            Mobile No
        </th>
        <th>
            Email
        </th>
        <th colspan="3" style="text-align :center ">Action</th>
    </tr>

    @foreach (var item in Model)
    {
        
    <tr >
        <td>
            @Html.DisplayFor(modelItem => item.COMPNM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SHORTNM)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ADDRS1)
            @Html.DisplayFor(modelItem => item.ADDRS2)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.PHONE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MOBILNO)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.EMAIL)
        </td>


        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.COMPCD }) |
            @Html.ActionLink("Details", "Details", new { id = item.COMPCD })|
            @Html.ActionLink("Delete", "Delete", new { id = item.COMPCD })
        </td>
    </tr>
    }

</table>

@if (Model.PageCount > 1)
{
    <p>Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount  </p>
    @Html.PagedListPager(Model, page => Url.Action("Index", "FactoryInfo", new { page }))
}

