@*@model IEnumerable<Production_Planner.Models.HRP_SECTION>*@

@model PagedList.IPagedList<Production_Planner.Models.HRP_SECTION>
@using PagedList.Mvc;
@Html.Raw(TempData["msg"])

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<h2 style=" text-align: center; text-decoration: underline;">Section Information</h2>

<p>
    <a href="@Url.Action("Create", "Section")" class="btn btn-primary"> Add Section</a>
</p>

<style type="text/css">
    th {
        font-size: 15px;
        text-align :center ;
        /*font-family:'Comic Sans MS' ;*/
    }

    td {
        font-size: 12px;
    }
</style>



<table class="table table-striped table-bordered">
    <tr>
        <th>
            Section Name
        </th>
        <th>
            Section Name(Bangla)
        </th>
        <th>
            Section Floor
        </th>
        <th>
            PR Symbol
        </th>
        <th>
            P SL No
        </th>
       
        <th>
            Lagging SL No
        </th>
        <th>
           Lagging Heading
        </th>
        <th colspan="3" style="text-align :center ">Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SECNAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SECNMBG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SECFLOOR)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PRSYMBOL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PSLNO)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.LAGGING_SLNO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LAGGING_HEADING)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SECCODE }) |
                @Html.ActionLink("Details", "Details", new { id = item.SECCODE }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SECCODE })
            </td>
        </tr>
    }

</table>

@if (Model.PageCount > 1)
{
    <p>Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount  </p>
    @Html.PagedListPager(Model, page => Url.Action("Index", "Section", new { page }))
}
